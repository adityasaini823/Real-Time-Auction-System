
<%- include('partials/header') %>
<div class="card">
  <div class="card-header bg-primary text-white">
    <h1 class="h3 mb-0">Create Auction</h1>
  </div>
  <div class="card-body">
    <form action="/auction/create" method="POST" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="title" class="form-label">Title:</label>
        <input type="text" id="title" name="title" class="form-control" required>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description:</label>
        <textarea id="description" name="description" class="form-control" rows="4" required></textarea>
      </div>

      <div class="mb-3">
        <label for="start_price" class="form-label">Starting Bid ($):</label>
        <input type="number" id="start_price" name="start_price" step="0.01" class="form-control" required>
      </div>

      <div class="mb-3">
        <label for="end_time" class="form-label">End Time:</label>
        <input type="datetime-local" id="end_time" name="end_time" class="form-control" required>
      </div>

      <button type="submit" class="btn btn-primary">Create Auction</button>

      <% if (error) { %>
        <div class="alert alert-danger mt-3">
          <%= error %>
        </div>
      <% } %>
    </form>
  </div>
</div>
<%- include('partials/footer') %>